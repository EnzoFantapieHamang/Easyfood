{% extends 'base.html.twig' %}

{% block title %}Ingredients index{% endblock %}

{% block body %}
    <h1>Ingredients</h1>

    <table class="table">
        <thead>
            <tr>
                <th>LibelleI</th>
            </tr>
        </thead>
        <tbody>
        {% for ingredient in ingredients %}
            <tr>
                <td>{{ ingredient.libelleI }}</td>
                <td>
                    <a href="{{ path('app_ingredients_new', {'id': ingredient.id}) }}">ajouter</a>
                    <a href="{{ path('app_ingredients_show', {'id': ingredient.id}) }}">show</a>
                    <a href="{{ path('app_ingredients_edit', {'id': ingredient.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_ingredients_new') }}">Create new</a>
{% endblock %}
