{% extends 'base.html.twig' %}

{% block title %}Quantite index{% endblock %}

{% block body %}
    <h1>Quantite index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NbPlat</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for quantite in quantites %}
            <tr>
                <td>{{ quantite.id }}</td>
                <td>{{ quantite.nbPlat }}</td>
                <td>
                    <a href="{{ path('app_quantite_show', {'id': quantite.id}) }}">show</a>
                    <a href="{{ path('app_quantite_edit', {'id': quantite.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_quantite_new') }}">Create new</a>
{% endblock %}
