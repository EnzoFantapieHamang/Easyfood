{% extends 'base.html.twig' %}

{% block title %}Resto index{% endblock %}

{% block body %}
    <h1>Resto index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>NomR</th>
                <th>NumAdrR</th>
                <th>RueAdrR</th>
                <th>CpR</th>
                <th>VilleR</th>
                <th>HorairesR</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for resto in restos %}
            <tr>
                <td>{{ resto.id }}</td>
                <td>{{ resto.nomR }}</td>
                <td>{{ resto.numAdrR }}</td>
                <td>{{ resto.rueAdrR }}</td>
                <td>{{ resto.cpR }}</td>
                <td>{{ resto.villeR }}</td>
                <td>{{ resto.horairesR }}</td>
                <td>
                    <a href="{{ path('app_resto_show', {'id': resto.id}) }}">show</a>
                    <a href="{{ path('app_resto_edit', {'id': resto.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_resto_new') }}">Create new</a>
{% endblock %}
